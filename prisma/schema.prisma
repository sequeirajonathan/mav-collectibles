generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CardProduct {
  id             String    @id @default(uuid())
  slug           String    @unique
  name           String
  setName        String?
  imageFront     String
  imageBack      String?
  description    String?
  price          Float
  marketPrice    Float?
  quantity       Int
  rarity         String?
  printing       String?
  language       String?
  releaseDate    DateTime?
  cardType       String?
  tcgplayerId    Int?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
